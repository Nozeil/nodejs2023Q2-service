generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  login     String
  password  String
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean
  Track  Track[]
  Album  Album[]
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  artist   Artist? @relation(references: [id], fields: [artistId])
  artistId String?
  Track    Track[]
}

model Track {
  id       String  @id @default(uuid())
  name     String
  artist   Artist? @relation(references: [id], fields: [artistId])
  artistId String?
  album    Album?  @relation(references: [id], fields: [albumId])
  albumId  String?
  duration Int
}
